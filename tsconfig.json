{
  "compilerOptions": {
    // "composite": true,
    "incremental": true /* Enable incremental compilation */,
    "target": "ESNext" /* Specify ECMAScript target version: esnext */,
    "module": "ESNext" /* 'none', 'commonjs', 'amd', 'system', 'esnext', etc */,
    "declaration": true /* Concatenate & emit output to single file.*/,
    "outDir": "dist" /* Redirect output to the directory. */,
    "removeComments": true,
    "esModuleInterop": true /* Enables intero between CommonJS and ES */,
    "useDefineForClassFields": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    // "allowJs": true,
    // "checkJs": true,
    // "isolatedModules": true
  },
  "include": [
    "src"
  ],
  "exclude": [
    "dist"
  ]
}